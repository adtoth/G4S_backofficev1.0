<core:View controllerName="sap.ui.netlife.G4S.view.bevetMasterLe"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout">
		    <u:SplitContainer
		      id="mySplitContainer"
		      showSecondaryContent="true"
		      secondaryContentSize="300px" >
		      <u:secondaryContent>
		        <List id="list2" select="handleListSelect" items="{/Courier}" growing="false" growingTriggerText="Többet mutat" growingScrollToLoad="true" growingThreshold="10" noDataText="Üres a lista">
					<headerToolbar>
					      <Toolbar>
					        <Label text="Bevét Leadások" />
					        <ToolbarSpacer />
					        <Button
					          icon="sap-icon://filter"
					          press="handleFilterPress" />	
					      </Toolbar>
					 </headerToolbar>
					<ObjectListItem type="Active" press="handleList2ItemPress"
						title="{Firstname} {Lastname}"
						number="{path: 'From', formatter: 'sap.ui.netlife.G4S.util.Formatter.countLeadas'}"
						numberUnit="Bevételezetlen"
						icon="sap-icon://physical-activity">
						<attributes>
							<ObjectAttribute text="ID: {External_ID}"/>
						</attributes>
					</ObjectListItem>
				</List>
	
		      </u:secondaryContent>
		      <u:content>
		      	<Toolbar>
		        	<Button id="toggleListBtn" press="handleToggleSecondaryContent" icon="sap-icon://close-command-field"/>
			        <ToolbarSpacer></ToolbarSpacer>
			        <Label id="2" text="Toolbar center"></Label>
			        <ToolbarSpacer></ToolbarSpacer>
			    </Toolbar>
		        
			  	<l:FixFlex class="fixFlexVertical">
			    	<l:fixContent>
				   		
		    		</l:fixContent>
		    	
		    		<l:flexContent>
			     		<Text class="column1" text="This container is flexible and it will adapts its size to fill the remaining size in the FixFlex contol"></Text>
			   		</l:flexContent>
			  	</l:FixFlex>
		        
		      </u:content>
		    </u:SplitContainer>
		    
		    
</core:View>