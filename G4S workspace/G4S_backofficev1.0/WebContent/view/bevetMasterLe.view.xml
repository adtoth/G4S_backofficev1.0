<core:View controllerName="sap.ui.netlife.G4S.view.bevetMasterLe"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout">
		    <u:SplitContainer
		      id="mySplitContainer"
		      showSecondaryContent="true"
		      secondaryContentSize="300px" >
		      <u:secondaryContent>
		        <List id="list2" select="handleListSelect" items="{/Courier}" growing="true" growingTriggerText="Többet mutat" growingScrollToLoad="true" growingThreshold="10" noDataText="Üres a lista">
					<headerToolbar>
					      <Toolbar>
					        <Label text="Bevét Leadások" />
					        <ToolbarSpacer />
					        <Button
					          icon="sap-icon://filter"
					          press="handleFilterPress" />	
					      </Toolbar>
					 </headerToolbar>
					<ObjectListItem type="Active" press="handleList2ItemPress"
						title="{Firstname} {Lastname}"
						number="{path: 'From', formatter: 'sap.ui.netlife.G4S.util.Formatter.countLeadas'}"
						numberUnit="Bevételezetlen"
						icon="sap-icon://physical-activity">
						<attributes>
							<ObjectAttribute text="ID: {External_ID}"/>
						</attributes>
					</ObjectListItem>
				</List>
	
		      </u:secondaryContent>
		      <u:content>
		      	<Toolbar>
		        	<Button id="toggleListBtn" press="handleToggleSecondaryContent" icon="sap-icon://close-command-field"/>
			        <ToolbarSpacer></ToolbarSpacer>
			        <Label id="2" text="Toolbar center"></Label>
			        <ToolbarSpacer></ToolbarSpacer>
			    </Toolbar>
		          <f:SimpleForm id="SimpleFormDisplay354"
			        minWidth="1024"
			        maxContainerCols="2"
			        editable="false"
			        layout="ResponsiveGridLayout"
			        title="Address"
			        labelSpanL="3"
			        labelSpanM="3"
			        emptySpanL="4"
			        emptySpanM="4"
			        columnsL="1"
			        columnsM="1">
			        <f:content>
			          <Label text="Összes mai csomag" />
			          <Text text="{SupplierName}" />
			          <Label text="Street/No." />
			          <Text text="{Street} {HouseNumber}" />
			          <Label text="ZIP Code/City" />
			        </f:content>
			      </f:SimpleForm>
		      </u:content>
		    </u:SplitContainer>
		    
		    
</core:View>