<core:View controllerName="sap.ui.netlife.G4S.view.bevetMasterLe"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" xmlns:f="sap.ui.layout.form"
	xmlns:viz="sap.viz" xmlns:l="sap.ui.layout"
	xmlns:c="sap.suite.ui.commons">
		    <u:SplitContainer
		      id="mySplitContainer"
		      showSecondaryContent="true"
		      secondaryContentSize="300px" >
		      <u:secondaryContent>
		        <List id="list2" select="handleListSelect" items="{/Courier}" growing="true" growingTriggerText="Többet mutat" growingScrollToLoad="true" growingThreshold="0" noDataText="Üres a lista">
					<headerToolbar>
					      <Toolbar>
					        <Label text="Bevét Leadások" />
					        <ToolbarSpacer />
					        <Button
					          icon="sap-icon://filter"
					          press="handleFilterPress" />	
					      </Toolbar>
					 </headerToolbar>
					<ObjectListItem type="Active" press="handleList2ItemPress"
						title="{Firstname} {Lastname}"
						number="{path: 'From', formatter: 'sap.ui.netlife.G4S.util.Formatter.countLeadas'}"
						numberUnit="Bevételezetlen"
						icon="sap-icon://physical-activity">
						<attributes>
							<ObjectAttribute text="ID: {External_ID}"/>
						</attributes>
					</ObjectListItem>
				</List>
	
		      </u:secondaryContent>
		      <u:content>
		      	 <!--  <viz:ui5.Pie>  
                    <viz:dataset>  
                           <viz:ui5.data.FlattenedDataset id="dataSet">  
                                <viz:dimensions>  
                                     <viz:ui5.data.DimensionDefinition id="dimension1" axis="1" name="Verkaufsorganisation" value="{ProductId}">  
                                     </viz:ui5.data.DimensionDefinition>  
                                </viz:dimensions>  
                                <viz:measures>  
                                     <viz:ui5.data.MeasureDefinition id="dimension2" name="Verkaufsmenge" value="{Price}">  
                                     </viz:ui5.data.MeasureDefinition>  
                                </viz:measures>  
                           </viz:ui5.data.FlattenedDataset>  
                    </viz:dataset>  
               	</viz:ui5.Pie>  
				-->      
				
								
		      	<Toolbar>
		        	<Button id="toggleListBtn" press="handleToggleSecondaryContent" icon="sap-icon://close-command-field"/>
			        <ToolbarSpacer></ToolbarSpacer>
			        <Label id="2" text="Toolbar center"></Label>
			        <ToolbarSpacer></ToolbarSpacer>
			    </Toolbar>
			    
		        <f:SimpleForm id="SimpleFormDisplay354"
			        minWidth="500"
			        maxContainerCols="2"
			        editable="false"
			        layout="ResponsiveGridLayout"
			        title="Összesített adatok"
			        labelSpanL="3"
			        labelSpanM="3"
			        emptySpanL="4"
			        emptySpanM="4"
			        columnsL="1"
			        columnsM="1">
			        <f:content>
			          <Label text="Mai bevételezendő csomagok" />
			          <Text id="bevetNumText" text="{BevetNum}" />
			          <Label text="Mai még bevételezetlen csomagok" />
			          <Text id="bevetFelvetlenNumText" text="{BevetFelvetlenNum}" />
			        </f:content>
			    </f:SimpleForm>
			    
			      <c:ColumnMicroChart size="M" id="chart" press="press" class="marginTopLeft">
				      <c:columns>
	   				        <c:ColumnData  id="col1" value="60" color="Error"/>
						    <c:ColumnData id="col2" value="80" color="Good"/>
				      </c:columns>
			    </c:ColumnMicroChart>
			     <Table id="idProductsTable"
				    inset="false"
				    items="{
				      path: '/ProductCollection',
				      sorter: {
				        path: 'Name'
				      }
				    }">
				    <headerToolbar>
				      <Toolbar>
				        <Label text="Products"></Label>
				      </Toolbar>
				    </headerToolbar>
				    <columns>
				      <Column
				        width="12em">
				        <Text text="Product" />
				      </Column>
				      <Column
				        minScreenWidth="Tablet"
				        demandPopin="true">
				        <Text text="Supplier" />
				      </Column>
				      <Column
				        minScreenWidth="Tablet"
				        demandPopin="true"
				        hAlign="Right">
				        <Text text="Dimensions" />
				      </Column>
				      <Column
				        minScreenWidth="Tablet"
				        demandPopin="true"
				        hAlign="Center">
				        <Text text="Weight" />
				      </Column>
				      <Column
				        hAlign="Right">
				        <Text text="Price" />
				      </Column>
				    </columns>
				    <items>
				      <ColumnListItem>
				        <cells>
				          <ObjectIdentifier
				            title="{Name}"
				            text="{ProductId}"
				            class="sapMTableContentMargin" />
				          <Text
				            text="{SupplierName}" />
				          <Text
				            text="{Width} x {Depth} x {Height} {DimUnit}" />
				          <ObjectNumber
				            number="{WeightMeasure}"
				            unit="{WeightUnit}"
				            state="{
				              path: 'WeightMeasure',
				              formatter: 'sap.m.sample.Table.Formatter.weightState'
				            }" />
				          <ObjectNumber
				          number="{Price}"
				          unit="{CurrencyCode}" />
				        </cells>
				      </ColumnListItem>
				    </items>
				  </Table>
							    
		      </u:content>
		    </u:SplitContainer>
		    
		    
</core:View>